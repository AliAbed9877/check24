{% extends 'base.html.twig' %}

{% block title %}Edit {{ card.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Credit Card: {{ card.name }}</h1>
        <form method="post" action="{{ path('app_card_edit', {id: card.id}) }}">
            <div class="mb-3">
                <label for="columnName" class="form-label">Field to Update</label>
                <select id="columnName" name="columnName" class="form-control" required>
                    <option value="name">Card Name</option>
                    <option value="annualFee">Annual Fee</option>
                    <option value="remarks">Remarks</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="value" class="form-label">Value</label>
                <input type="text" id="value" name="value" class="form-control" required>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="{{ path('app_cards') }}" class="btn btn-secondary">Back to List</a>
            </div>
        </form>

    </div>
{% endblock %}

